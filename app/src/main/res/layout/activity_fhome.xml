<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/loginParent"
    tools:context="com.mythri.reclancer_app.Freelancer.FHome">

    <ScrollView style="@style/parent">

        <RelativeLayout style="@style/parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:weightSum="12">

                <LinearLayout
                    style="@style/parent"
                    android:layout_weight="3"
                    android:background="@drawable/login_shape_bk"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/parent"
                        android:background="@drawable/ic_login_bk"
                        android:contentDescription="login background" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    style="@style/headerText"
                    android:layout_gravity="center"
                    android:text="Welcome Freelancer" />

                <android.support.v7.widget.CardView
                    style="@style/loginCard"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"

                    android:background="@color/whiteCardColor"
                    android:elevation="5dp"
                    app:cardCornerRadius="@dimen/loginCardRadius">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView

                            style="@style/SearchText"
                            android:layout_gravity="center"
                            android:text="Profile"
                            />

                        <!--<ImageView
                            android:id="@+id/pic"
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/noimage"/>-->

                        <TextView

                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            />

                        <TextView
                            android:id="@+id/lname"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                           />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/loginCard"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"

                    android:background="@color/whiteCardColor"
                    android:elevation="5dp"
                    app:cardCornerRadius="@dimen/loginCardRadius">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            style="@style/SearchText"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_details"/>

                        <TextView
                            android:id="@+id/fname"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Edit Name"
                            />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/loginCard"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"

                    android:background="@color/whiteCardColor"
                    android:elevation="5dp"
                    app:cardCornerRadius="@dimen/loginCardRadius">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            style="@style/SearchText"
                            android:layout_gravity="center"

                            android:text="Contact Details"
                            android:background="@drawable/bg_skillset"/>

                        <TextView
                            android:id="@+id/email"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Edit Email"
                            />
                        <TextView
                            android:id="@+id/mobile"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:text="Edit Mobile"
                            />

                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    style="@style/loginCard"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"

                    android:background="@color/whiteCardColor"
                    android:elevation="5dp"
                    app:cardCornerRadius="@dimen/loginCardRadius">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            style="@style/SearchText"
                            android:layout_gravity="center"
                            android:text="Address"
                            android:background="@drawable/bg_jobdetails"/>

                        <TextView

                            android:id="@+id/address"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="Edit Address"
                             />

                        <TextView
                            android:id="@+id/city"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:text="Edit City" />

                        <TextView
                            android:id="@+id/state"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:text="Edit State" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <Button
                    android:id="@+id/editprofile"
                    style="@style/loginButton"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:onClick="edit_profile"
                    android:text="EDIT"
                />



            </LinearLayout>




            <ImageView
                android:id="@+id/poppup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:src="@android:drawable/ic_dialog_dialer"
                android:onClick="ShowMenu"/>
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>


