<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
    android:background="#00b1e1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp">


    <RelativeLayout
        android:layout_height="110dp"
        android:layout_width="match_parent">


    <LinearLayout
        android:background="#E2E2E2"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_alignParentBottom="true">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Order #RZP42"
        android:textSize="12sp"
        android:paddingBottom="0dp"
        android:paddingTop="35dp"/>

</LinearLayout>

    <ImageView
        android:background="@drawable/white_border_black_bg"
        android:layout_height="60dp"
        android:layout_width="60dp"
        android:src="@drawable/rzp"
        android:padding="15dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>


    <LinearLayout
        android:background="#f2f2f2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="15dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Razorpay T-Shirt"
        android:textSize="20sp"
        android:paddingBottom="5dp"
        android:paddingTop="0dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="INR 1.00"
        android:textSize="12sp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="This is a real transaction"
        android:textSize="12sp"
        android:paddingBottom="0dp"
        android:paddingTop="5dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"/>

    <Button
        android:background="@drawable/green_button"
        android:layout_height="36dp"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Purchase"
        android:textSize="14sp"
        android:layout_gravity="center_horizontal"
        android:textColor="#fcfcfc"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/btn_pay"/>

</LinearLayout>

    <TextView
        android:background="@drawable/secured_by_bg"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Secure Payments by Razorpay"
        android:textSize="12sp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textStyle="italic"
        android:textColor="#a1ddee"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"/>

</LinearLayout>

</RelativeLayout>