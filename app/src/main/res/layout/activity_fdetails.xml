<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/loginParent"
    tools:context="com.mythri.reclancer_app.Recruiter.FDetails">

    <ScrollView style="@style/parent">

        <RelativeLayout style="@style/parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:weightSum="12">

                <LinearLayout
                    style="@style/parent"
                    android:layout_weight="3"
                    android:background="@drawable/login_shape_bk"
                    android:orientation="vertical">

                    <ImageView
                        style="@style/parent"
                        android:background="@drawable/ic_login_bk"
                        android:contentDescription="login background" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    style="@style/headerText"
                    android:layout_gravity="center"
                    android:text="Job Details"
                    />


                <android.support.v7.widget.CardView
                    style="@style/loginCard"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"

                    android:background="@color/whiteCardColor"
                    android:elevation="5dp"
                    app:cardCornerRadius="@dimen/loginCardRadius">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            android:id="@+id/name"
                            style="@style/SearchText"
                            android:layout_gravity="center"

                            />

                        <TextView
                            android:id="@+id/email"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="Position Available" />

                        <TextView
                            android:id="@+id/mobile"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:text="3 Applied" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/loginCard"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"

                    android:background="@color/whiteCardColor"
                    android:elevation="5dp"
                    app:cardCornerRadius="@dimen/loginCardRadius">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            style="@style/SearchText"
                            android:layout_gravity="center"

                            android:text="Project Details"
                            android:background="@drawable/bg_skillset"/>

                        <TextView
                            android:id="@+id/paddress"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            />

                        <TextView
                            android:id="@+id/state"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:id="@+id/city"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:id="@+id/prates"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                             />

                        <TextView
                            android:id="@+id/pwtype"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:id="@+id/psdate"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:id="@+id/pedate"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            />


                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    style="@style/loginCard"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"

                    android:background="@color/whiteCardColor"
                    android:elevation="5dp"
                    app:cardCornerRadius="@dimen/loginCardRadius">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            style="@style/SearchText"
                            android:layout_gravity="center"

                            android:text="Skillset"
                            android:background="@drawable/bg_skillset"/>

                        <TextView
                            android:id="@+id/skills"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            />

                        <TextView
                            android:id="@+id/exp"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            />
                        <!--<TextView
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:text="- Three" />-->


                    </LinearLayout>
                </android.support.v7.widget.CardView>



                <!--<android.support.v7.widget.CardView
                    style="@style/loginCard"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"

                    android:background="@color/whiteCardColor"
                    android:elevation="5dp"
                    app:cardCornerRadius="@dimen/loginCardRadius">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            style="@style/SearchText"
                            android:layout_gravity="center"

                            android:text="Professional Reference"
                            android:background="@drawable/bg_jobdetails"/>

                        <TextView
                            android:id="@+id/pref"
                            style="@style/SearchApplied"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            />



                    </LinearLayout>
                </android.support.v7.widget.CardView>-->

                <Button
                    style="@style/loginButton"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="APPLY"
                    android:onClick="interested"/>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"

                android:src="@android:drawable/ic_dialog_dialer" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="370dp"
                android:layout_marginTop="21dp"

                android:layout_marginRight="-10dp"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>


