<ScrollView style="@style/parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        style="@style/loginParent"
        android:background="@drawable/bg_linear"
        tools:context="com.mythri.reclancer_app.Recruiter.ManageRJobs">


        <android.support.v7.widget.CardView
            android:id="@+id/card"
            style="@style/loginCard"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/loginViewsMargin"
            android:background="@color/whiteCardColor"
            android:elevation="5dp"
            app:cardCornerRadius="@dimen/loginCardRadius">

            <LinearLayout
                style="@style/linearParent"
                android:layout_gravity="center"
                android:padding="@dimen/loginViewsMargin">

                <TextView
                    android:id="@+id/category"
                    style="@style/SearchText"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_result_next"/>

                <TextView
                    android:id="@+id/name"
                    style="@style/SearchApplied"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/skills"
                    style="@style/SearchApplied"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/exp"
                    style="@style/SearchApplied"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/id"
                    style="@style/SearchApplied"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/email"
                    style="@style/SearchApplied"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/ad_id"
                    style="@style/SearchApplied"
                    android:layout_gravity="center"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/editad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_applieddetails"
                        android:text="Edit"
                        android:textSize="10sp"
                        android:onClick="editAd"/>


                    <Button
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_appliedexp"
                        android:text="Ad Status"
                        android:textSize="10sp"
                        android:onClick="adstatus"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

